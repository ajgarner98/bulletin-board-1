<div>
  <a href = "/board"> Bulletin Board</a>
</div>

<hr>

<div>
  <h1> <%=@the_board.name%></h1>
</div>

<hr>

<div>
  <h2>Add Posts </h2>
</div>

<form action = "/insert_post/" method = "post" >
  <div>
    <label for  = "title_box">
      Title
    </label>
    <input type = "text" id = "title_box" name = "query_title">
  </div>

  <div>
    <label for = "body_box">
      Body 
    </label>
    <textarea name ="query_body" id = "body_box"> </textarea>
  </div>
  <div>
    <label for = "expire_box">
      Expires on
    </label>
    <input type = "date" id = "expire_box" name = "query_expires_on">
  </div>
  <div>
    <label for  = "id_box">
      Board ID
    </label>
    <input type = "text" id = "id_box" name = "query_board_id" value = "<%=@the_board.id%>">
  </div>

  <button>
    Add post
  </button>
</form>
<div>
  <h2> Active posts </h2>
</div>

<table border = 1>
  <tr>
    <th>
      Title
    </th>

    <th>
      Body
    </th>

    <th>
      Posted on
    </th>

    <th>
      Expired on
    </th>
  </tr>

  <%@the_board.posts.each do |a_post|%>

    <tr>
      <%if a_post.expires_on < Time.now%>
        <td> 
          <%=a_post.title%>
        </td>

        <td> 
          <%=a_post.body%>
        </td>

        <td>
          <%=a_post.created_at%>
        </td>

        <td>
          <%=a_post.expires_on%>
        </td>
      </tr>
    <%end%>
  <%end%>

</table>

<table border = 1>
  <tr>
    <th>
      Title
    </th>

    <th>
      Body
    </th>

    <th>
      Posted on
    </th>

    <th>
      Expired on
    </th>
  </tr>
<div>
  <h2> Expired posts </h2>
</div>
  <%@the_board.posts.each do |a_post|%>

    <tr>
      <%if a_post.expires_on > Time.now%>
        <td> 
          <%=a_post.title%>
        </td>

        <td> 
          <%=a_post.body%>
        </td>

        <td>
          <%=a_post.created_at%>
        </td>

        <td>
          <%=a_post.expires_on%>
        </td>
      </tr>
    <%end%>
  <%end%>

</table>


</form>
